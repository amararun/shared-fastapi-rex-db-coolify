# ===========================================
# LLM PROXY (Required for file upload endpoints)
# ===========================================
RT_ENDPOINT=https://your-proxy-server-url.com/open-chat-completion
RT_MODEL=google/gemini-2.0-flash-001

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT=300/hour

# ===========================================
# DATABASE CONNECTIONS (Fixed)
# Used by /sqlquery/ endpoint with cloud parameter
# These are labels - you can use any compatible database
# ===========================================

# PostgreSQL (used with cloud=neon)
NEON_HOST=your_host
NEON_DATABASE=your_database
NEON_USER=your_user
NEON_PASSWORD=your_password

# MySQL (used with cloud=filessio)
FILESSIO_HOST=your_host
FILESSIO_DATABASE=your_database
FILESSIO_USER=your_user
FILESSIO_PASSWORD=your_password
FILESSIO_PORT=3306

# MySQL (used with cloud=aws)
AWS_HOST=your_host
AWS_DATABASE_NAME=your_database
AWS_USER=your_user
AWS_PASSWORD=your_password

# MySQL (used with cloud=azure)
AZURE_HOST=your_host
AZURE_DATABASE_NAME=your_database
AZURE_USER=your_user
AZURE_PASSWORD=your_password

# ===========================================
# OPTIONAL / EXTERNAL INTEGRATIONS
# ===========================================
# FLOWISE_API_ENDPOINT=your_flowise_api_endpoint
